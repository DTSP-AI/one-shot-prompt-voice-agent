# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-host
LIVEKIT_API_KEY=your_key_here
LIVEKIT_API_SECRET=your_secret_here

# Speech-to-Text (STT)
STT_PROVIDER=deepgram                 # deepgram | whisper
DEEPGRAM_API_KEY=your_key_here
OPENAI_API_KEY=your_key_here          # only if using Whisper

# Text-to-Speech (TTS)
TTS_PROVIDER=elevenlabs
ELEVENLABS_API_KEY=your_key_here
ELEVENLABS_VOICE_ID=your_voice_id

# Vision Processing
ENABLE_VISION=true
VISION_MODEL=openai:gpt-4o-mini

# Telephony (Optional)
ENABLE_TELEPHONY=false
TELEPHONY_MODE=sip_ingress            # sip_ingress | twilio
LIVEKIT_SIP_INGRESS_URL=sip:ingress-id@your-livekit-host
LIVEKIT_SIP_INGRESS_AUTH=user:pass
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_FROM_NUMBER=+15551234567
TWILIO_INGRESS_SIP_URI=sip:ingress-id@your-livekit-host

# Mem0 Persistent Memory
MEM0_PROJECT=agentic-os
MEM0_STORE=local                      # local | remote
MEM0_API_KEY=your_mem0_key            # if remote platform

# Server Configuration
PORT=8000
LOG_LEVEL=INFO
QUIET_HOURS=08:00-19:00

# Development/Debug
DEBUG=false
ENABLE_METRICS=true
METRICS_PORT=9090