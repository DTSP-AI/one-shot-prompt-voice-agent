# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{py,js,ts,jsx,tsx,html,css,scss,json,yml,yaml,md}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false

# PowerShell files
[*.ps1]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab